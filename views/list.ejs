<%- include("header") -%>

  <div id="heading" class="box">
    <h1>  <%= listTitle %> List</h1>
  </div>

  <div class="box" id="">
    <form
      action="/taskDone"
      method="post"
    >
      <% newTodoItems.forEach((task) => { %>
        <div class="item">
          <input type="checkbox" name="todoStatus" value = <%= task._id  %> onChange="this.form.submit()" > </input>
          <p> <%= task.taskName %></p>
        </div>
      <% }); %>
      <input type="hidden" name="listTitle" value = <%= listTitle %> > </input>

    </form>
